#!/bin/bash

GREEN='\033[0;32m'
RED='\033[0;31m'
CYAN='\033[0;36m'
NC='\033[0m'

echo -e "${CYAN}üöÄ Building project (no tests)...${NC}"
./gradlew assemble -x test -x integrationTest --configuration-cache --quiet

echo -e "${CYAN}üß™ Running unit tests in parallel...${NC}"
./gradlew test --no-daemon --quiet --parallel &
TEST_PID=$!

echo -e "${CYAN}üî¨ Running integration tests in parallel...${NC}"
./gradlew integrationTest --no-daemon --quiet --parallel &
INTEGRATION_PID=$!

wait $TEST_PID
TEST_EXIT=$?
wait $INTEGRATION_PID
INTEGRATION_EXIT=$?

if [[ $TEST_EXIT -ne 0 ]]; then
  echo -e "${RED}‚ùå Unit tests failed!${NC}"
fi

if [[ $INTEGRATION_EXIT -ne 0 ]]; then
  echo -e "${RED}‚ùå Integration tests failed!${NC}"
fi

if [[ $TEST_EXIT -eq 0 && $INTEGRATION_EXIT -eq 0 ]]; then
  echo -e "${GREEN}‚úÖ All tasks finished!${NC}"
fi
